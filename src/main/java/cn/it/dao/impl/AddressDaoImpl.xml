<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.it.dao.AddressDao">

	<select id="select" parameterType="int" resultType="cn.it.pojo.Address">
		select * from
		address where user_ID=#{user_ID}
	</select>
	
	<insert id="addressAdd" parameterType="cn.it.pojo.Address">
		insert into
		address(addr,user_ID)
		values(#{addr},#{user_ID})
	</insert>
	
	<delete id="addressDelete" parameterType="cn.it.pojo.Address">
		delete from address
		<where>
			addressid = #{addressid}
		</where>
	</delete>
</mapper>