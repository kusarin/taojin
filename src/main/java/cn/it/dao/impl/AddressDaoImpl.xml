<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="cn.it.dao.AddressDao">
     <select id="select" parameterType="int" resultType="cn.it.pojo.Address">
          select * from address where userId=#{userId}
     </select>
     <insert id="add" parameterType="cn.it.pojo.Address">
        insert into address(receivingaddress,contacts,name,userId)values(#{receivingaddress},#{contacts},#{name},#{userId})
     </insert>
</mapper>