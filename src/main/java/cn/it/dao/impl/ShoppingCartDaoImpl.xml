<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.it.dao.ShoppingCartDao">

	<insert id="addressAdd" parameterType="cn.it.pojo.ShoppingCart">
		insert into
		shoppingcart(userId,total,shop_id,shopName)
		values(#{userId},#{total},#{shop_id},#{shopName})
	</insert>
	
	<delete id="addressDelete" parameterType="int">
		delete from shoppingcart
		<where>
			cartId = #{cartId}
		</where>
	</delete>
	
</mapper>