<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "cn.it.dao.UsersDao">


<!-- login -->
   <select id="login"  parameterType="java.lang.String" resultType="cn.it.pojo.Users">
		select * from users where username = #{0} and password = #{1}
	</select>
<!-- 增删改查方法 -->
	<insert id="UsersAdd" parameterType="cn.it.pojo.Users">
		insert into users(username,password,name,tele,email,type,ID) 
		        values(#{username},#{password},#{name},#{tele},#{email},#{type},#{ID})
	</insert>
	<delete id="UsersDelete"  parameterType="cn.it.pojo.Users">
		delete from users
		<where>
			user_ID = #{user_ID}
		</where>
	</delete>
	<update id="UsersUpdate"  parameterType="cn.it.pojo.Users">
		update users set username=#{username},password=#{password},name=#{name},tele=#{tele},
		                email=#{email},type=#{type},ID=#{ID}
		<where>
			<if test="userID!=0">
				and user_ID=#{user_ID}
			</if>
		</where>
	</update>
	<select id="UsersSearch"  parameterType="cn.it.pojo.Users">
		select * from Users where user_ID = #{user_ID}
	</select>
</mapper>