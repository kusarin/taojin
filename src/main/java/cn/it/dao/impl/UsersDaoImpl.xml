<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "cn.it.dao.UsersDao">

<!-- 搜索用户名（查重） -->
	<select id="UsersFind"   resultType="cn.it.pojo.Users">
		select * from users
	</select>
<!-- login -->
   <select id="login"  parameterType="cn.it.pojo.Users" resultType="cn.it.pojo.Users">
		select * from users where username = #{username} and password = #{password}
	</select>
<!-- 增删改查方法 -->

	<insert id="UsersAdd" parameterType="cn.it.pojo.Users">
		insert into users(username,password,name,tele,email,type,ID) 
		        values(#{username},#{password},#{name},#{tele},#{email},#{type},#{ID})
	</insert>
	
	<delete id="UsersDelete"  parameterType="cn.it.pojo.Users">
		delete from users
		<where>
			user_ID = #{user_ID}
		</where>
	</delete>
	
	<update id="UsersUpdate"  parameterType="cn.it.pojo.Users">
		update users set password=#{password},name=#{name},tele=#{tele},email=#{email}
	</update>
	
	<select id="UsersSearch"  parameterType="cn.it.pojo.Users">
		select * from Users where user_ID = #{user_ID}
	</select>
</mapper>