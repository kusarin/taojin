<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   <mapper namespace="cn/it/dao/ShopInfoDao">
   <select id="findByid" parameterType="int" resultType="cn.it.pojo.Shop">
		Select * from shop
		<where>Shop_id=#{id}
		</where>
	</select>
	<select id="findShopList" resultType="cn.it.pojo.Shop">
	    Select * from shop order by id asc
	</select>
   </mapper>