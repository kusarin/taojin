<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "cn.it.dao.ShopRequestDao">

	<select id ="findAll" resultType="cn.it.pojo.ShopRequest">
		select *  from shoprequest
	</select>
	
	<insert id="add" parameterType="cn.it.pojo.ShopRequest">
		insert into shoprequest(user_id,name,type,intro)
		values(#{user_id}#{name}#{type}#{intro})
	</insert>
	
	<delete id="delete" parameterType="java.lang.Integer">
          delete from shoprequest where shoprequest_id=#{id}
     </delete>
     
     <select id ="findById" resultType="cn.it.pojo.ShopRequest" parameterType="java.lang.Integer">
		select *  from shoprequest where shoprequest_id=#{id}
	</select>
</mapper>