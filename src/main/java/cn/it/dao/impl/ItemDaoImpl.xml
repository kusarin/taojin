<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "cn.it.dao.ItemDao">

<!-- 增删改查方法 -->
	<insert id="add" parameterType="cn.it.pojo.Item">
		insert into item(name,part,typeh,typel,number,price,detail,image) 
		        values(#{name},#{part},#{typeh},#{typel},#{number},#{price},#{detail},#{image})
	</insert>
	<insert id="delete"  parameterType="cn.it.pojo.Item">
		delete from item 
		<where>
			id = #{id}
		</where> 		
	</insert>
	<insert id="update"  parameterType="cn.it.pojo.Item">
		update user set name=#{name},part=#{part},typeh=#{typeh},typel=#{typel},
		                number=#{number},price=#{price},detail=#{detail},image=#{image}
		<where>
			<if test="id!=0">
				and id=#{id}				
			</if>
		</where>
	</insert>
	<insert id="search"  parameterType="cn.it.pojo.Item">
		select *from user
		<where>
			and id=#{id}
		</where>
	</insert>
</mapper>